@model Product
<div class="card shadow border-0 mt-t">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-info" py-2> Create Product </h2>
            </div>
        </div>
    </div>

    <div class="shadow card-body bg-secondary bg-gradient ml-0 py-3">
        <form method="post">
            <div class="border p-3" >
                <div class="p-0" asp-validation-summary="All"></div>

                <div class="form-floating py-3 col-12">
                    <label asp-for="Title" class="ms-2"></label>
                    <input asp-for="Title" type="text" class="form-control border-1 shadow" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-floating py-3 col-12">
                    <label asp-for="Author" class="ms-2"></label>
                    <input asp-for="Author" type="text" class="form-control border-1 shadow" />
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <div class="form-floating py-3 col-12">
                    <label asp-for="Description" class="ms-2"></label>
                    <textarea asp-for="Description" type="text" class="form-control border-1 shadow" rows="2"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-floating py-3 col-12">
                    <label asp-for="ISBN" class="ms-2"></label>
                    <input asp-for="ISBN" type="text" class="form-control border-1 shadow" />
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>
                <div class="form-floating py-3 col-12">
                    <label asp-for="ListPrice" class="ms-2"></label>
                    <input asp-for="ListPrice" type="text" class="form-control border-1 shadow" />
                    <span asp-validation-for="ListPrice" class="text-danger"></span>
                </div>
                <div class="form-floating py-3 col-12">
                    <label asp-for="Price" class="ms-2"></label>
                    <input asp-for="Price" type="text" class="form-control border-1 shadow" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-floating py-3 col-12">
                    <label asp-for="Price50" class="ms-2"></label>
                    <input asp-for="Price50" type="text" class="form-control border-1 shadow" />
                    <span asp-validation-for="Price50" class="text-danger"></span>
                </div>
                <div class="form-floating py-3 col-12">
                    <label asp-for="Price100" class="ms-2"></label>
                    <input asp-for="Price100" type="text" class="form-control border-1 shadow" />
                    <span asp-validation-for="Price100" class="text-danger"></span>
                </div>
                <div class="row pt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-outline-light form-control">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="product" asp-action="index" class="btn btn-outline-light form-control"> Back to List</a>
                    </div>
                </div>
            </div>
        

        
        </form>
    </div>

    </div> 


            @section Scripts{
                @{
                    <partial name="_ValidationScriptsPartial" />
                }
            }
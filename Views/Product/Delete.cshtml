@model Product
<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-2 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Product</h2>
            <hr />

        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Title" class="p-0"></label>
            <input asp-for="Title" type="text" class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Author" class="p-0"></label>
            <input asp-for="Author" type="text" class="form-control" />
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-outline-light form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="product" asp-action="index" class="btn btn-outline-light form-control"> Back to List</a>
            </div>
        </div>



    </div>
</form>

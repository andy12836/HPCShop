@model List<Product>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6"><h2>Product List</h2></div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-outline-info">
                <i class="bi bi-plus-circle"></i> Add new Product
            </a>
        </div>

    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Product Title
            </th>
            <th>
                Author
            </th>
            <th>
                Price
            </th>
            <th>
                ISBN
            </th>
            <th>
                Category
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Product obj in Model.OrderBy(u => u.Id))
        {
            <tr>
                <td>@obj.Title</td>
                <td>@obj.Author</td>
                <td>@obj.Price</td>
                <td>@obj.ISBN</td>
                <td>@obj.Category.Name</td>
                <td>
                    <div class="d-flex justify-content-center">
                        <a asp-controller="Product" asp-action="Upsert" asp-route-productId="@obj.Id" class="btn btn-success">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="Product" asp-action="Delete" asp-route-productId2="@obj.Id" class="btn btn-danger">
                            <i class="bi bi-trash3-fill"></i> Delete
                        </a>

                    </div>


                </td>
            </tr>
        }
    </tbody>
</table>

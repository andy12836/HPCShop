@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<Product>

<div class="row pb-3">
    @foreach(var product in Model)
    {
        <div class="col-lg-3 col-sm-6 p-1">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card p-1 shadow border-4 border-top rounded">
                        @if(product.ImageUrl != null && product.ImageUrl.Count() > 0)
                        {
                            <img src="@product.ImageUrl" class="card-img-top rounded" />
                        }
                        else{
                            <div> image not found </div>     
                        }
                    </div>
                    <div class="pb-0 card-body">
                        <div class="pl-1">
                            <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.Title</p>
                            <p class="card-title text-danger-emphasis text-center">by <b>@product.Author</b></p>
                        </div>
                    </div>
                    <div class="pl-1">
                        <p class="text-dark text-opacity-75 text-center mb-0">
                            List Price:
                            <span class="text-decoration-line-through">
                                @product.ListPrice.ToString("c")
                            </span>
                        </p>
                    </div>
                    <div class="pl-1">
                        <p class="text-dark text-opacity-75 text-center">
                            As low as:
                            <span>
                                @product.Price100.ToString("c")
                            </span>
                        </p>
                    </div>
                </div>
                <div class="">
                    <a asp-action="Details"
                       asp-route-productId="@product.Id"
                       class="btn btn-primary bg-gradient border-0 form-control m-1">
                        Details
                    </a>
                </div>
            </div>
            
        </div>
    }

</div>
